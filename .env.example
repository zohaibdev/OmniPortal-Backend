APP_NAME=OmniPortal
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_BASE_DOMAIN=time-luxe.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=omniportal
DB_USERNAME=root
DB_PASSWORD=

# Production Database (for global data like Products)
DB_PROD_HOST=127.0.0.1
DB_PROD_PORT=3306
DB_PROD_DATABASE=main
DB_PROD_USERNAME=main_root
DB_PROD_PASSWORD=

# Tenant Database Configuration
TENANT_DATABASE_PREFIX=tenant_
TENANT_AUTO_CREATE=true
TENANT_AUTO_MIGRATE=true
TENANT_AUTO_SEED=true

# Hashids Salt (for ID encryption)
HASHIDS_SALT=your-unique-salt-here

BROADCAST_DRIVER=log
