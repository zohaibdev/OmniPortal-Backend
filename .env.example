APP_NAME=OmniPortal
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=omniportal
DB_USERNAME=root
DB_PASSWORD=

# Production Database (for global data like Products)
DB_PROD_HOST=127.0.0.1
DB_PROD_PORT=3306
DB_PROD_DATABASE=main
DB_PROD_USERNAME=main_root
DB_PROD_PASSWORD=

# Tenant Database Configuration
TENANT_DATABASE_PREFIX=tenant_
TENANT_AUTO_CREATE=true
TENANT_AUTO_MIGRATE=true
TENANT_AUTO_SEED=true

# Laravel Forge Configuration (for auto-provisioning store subdomains and databases)
FORGE_API_TOKEN=your-forge-api-token
FORGE_SERVER_ID=your-server-id
FORGE_BASE_DOMAIN=time-luxe.com
FORGE_PHP_VERSION=php83
FORGE_DATABASE_USER=forge

# Deployment Configuration
STOREFRONT_BUILD_PATH=../storefront/dist
STORES_DEPLOY_PATH=../stores
AUTO_CREATE_FORGE_SITE=true
AUTO_DEPLOY_STOREFRONT=true
STORE_BASE_DOMAIN=time-luxe.com
API_URL=https://api.time-luxe.com

# Hashids Salt (for ID encryption)
HASHIDS_SALT=your-unique-salt-here

BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=database
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@omniportal.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

CASHIER_CURRENCY=usd
CASHIER_CURRENCY_LOCALE=en

SANCTUM_STATEFUL_DOMAINS=localhost,localhost:3000,localhost:3001,127.0.0.1,127.0.0.1:8000,::1
